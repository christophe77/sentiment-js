{
  "root": true,
  "plugins": ["@typescript-eslint", "prettier"],
  "rules": {
    "prettier/prettier": 2,
    "class-name": true,
    "curly": 1,
    "eofline": true,
    "forin": true,
    "indent": [true, "spaces", 2],
    "label-position": true,
    "max-line-length": [true, 140],
    "no-arg": true,
    "no-bitwise": 1,
    "no-console": [true, "debug", "info", "time", "timeEnd", "trace"],
    "no-construct": true,
    "no-debugger": 1,
    "no-duplicate-variable": false,
    "no-empty": 0,
    "no-eval": 1,
    "no-string-literal": true,
    "no-switch-case-fall-through": true,
    "no-trailing-whitespace": false,
    "no-unused-expression": true,
    "no-unused-variable": false,
    "one-line": [
      true,
      "check-open-brace",
      "check-catch",
      "check-else",
      "check-whitespace",
    ],
    "quotemark": [true, "single"],
    "radix": 1,
    "semicolon": false,
    "triple-equals": [true, "allow-null-check"],
    "variable-name": false,
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type",
    ],
    "env": {
      "browser": true,
      "node": true,
      "es2022": true,
    },
  },
}
