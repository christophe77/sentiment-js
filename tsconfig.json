{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "declarationDir": "./",
    "sourceMap": true,
    "module": "nodenext",
    "target": "es6",
    "noImplicitAny": false,
    "removeComments": true,
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "lib": ["es5", "es6", "dom"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/", "dist", "exemples"]
}
